<idea-plugin>
    <id>com.innometrics.innometrics-intellij-plugin.innometrics-intellij-plugin</id>
    <name>Innometrics</name>
    <vendor email="b.khabirov@innopolis.ru" url="htpps://t.me/khabiroff">Bulat Khabirov, Innopolis University</vendor>

    <description><![CDATA[
    Innometrics tracker plugin for IntelliJ platform IDEs<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceInterface="services.TokenStorageService"
                            serviceImplementation="services.impl.TokenStorageServiceImpl"/>
        <applicationService serviceInterface="services.ActivitiesStorageService"
                            serviceImplementation="services.impl.ActivitiesStorageServiceImpl"/>
        <applicationService serviceInterface="services.InnometricsCoreService"
                            serviceImplementation="services.impl.InnometricsCoreServiceImpl"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="TestActionGroup" class="actions.InnometricsToolsActionGroup" text="Innometrics" description="A group containing Innometrics plugin actions" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>