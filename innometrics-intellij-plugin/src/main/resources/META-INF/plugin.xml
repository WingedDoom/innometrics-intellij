<idea-plugin>
    <id>com.innometrics.innometrics-intellij-plugin.innometrics-intellij-plugin</id>
    <name>Innometrics</name>
    <vendor email="b.khabirov@innopolis.ru" url="htpps://t.me/khabiroff">Bulat Khabirov, Innopolis University</vendor>

    <description><![CDATA[
    Innometrics tracker plugin for IntelliJ platform IDEs<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="Innometrics.ToolsMenuItem"
                class="ToolsMenuAction"
                text="Innometrics Plugin" description="Innometrics plugin tools menu item">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>